<?xml version="1.0"?>
<block>
  <name>stop_and_wait_arq</name>
  <key>inets_stop_and_wait_arq</key>
  <category>inets</category>
  <import>import inets</import>
  <make>inets.stop_and_wait_arq()</make>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>from_app</name>
    <type>message</type>
  </sink>
  <sink>
    <name>from_phy</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>to_app</name>
    <type>message</type>
  </source>
  <source>
    <name>to_phy</name>
    <type>message</type>
  </source>
</block>
